{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "frontend/dist" }
      },
      {
        "src": "backend/**/*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "/backend/$1" },
      { "src": "/(.*)", "dest": "/frontend/$1" }
    ]
  }
  